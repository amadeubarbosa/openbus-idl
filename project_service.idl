#ifndef PS_IDL
#define PS_IDL

#include "core.idl"

module openbusidl {

/**
 * \brief Módulo do Serviço de Projetos.
 */
module ps {

interface IFile;
typedef sequence<IFile> FileList;

interface IProject {
  string getId();
  string getName();
  string getOwner();
  IFile getRootFile();
  boolean exists(in string path);
  boolean createFile(in IFile parent, in string name, in string type);
  boolean createDirectory (in IFile parent, in string name);
  boolean deleteFile(in IFile aFile);
  boolean renameFile (in IFile aFile, in string newName);
  boolean moveFile(in IFile currentParent, in IFile newParent);
  boolean copyFile(in IFile currentParent, in IFile newParent);
  void deactivate();
};
typedef sequence<IProject> ProjectList;

interface IDataChannel {
};

interface IFile {
  string getName();
  string getPath();
  long long getSize();
  boolean canRead();
  boolean canWrite();
  boolean isDirectory();
  FileList getChildren();
  IProject getProject();
  IDataChannel openDataChannel();
  boolean closeDataChannel(in IDataChannel channel);
  void deactivate();
};

interface IProjectService {
  ProjectList getProjects();
  IProject getProject (in string name);
  IFile getFile(in string path);
  IProject createProject(in string name);
  boolean deleteProject(in IProject aProject);
};

interface IProjectServiceComponent : IMember {
};

};

};

#endif
